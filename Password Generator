import secrets
def generate_password(num_of_words,wordlist_path = "diceware.wordlist.asc"):
  with open(wordlist_path,'r',encoding ='utf-8') as file:
    lines = file.readlines()[2:7778]
    word_list = [lines.split()[1] for line in lines]
  words = [secret.choice(word_list) for i in range(num_of_words)]
  return ' '.join(words)
try:
  num_of_words = int(input("Enter the desired length of words you want to use in the password"))
  print("Generated Password: ",generate_password(num_of_words))
except ValueError:
  print("Please enter a valid integer number.")

